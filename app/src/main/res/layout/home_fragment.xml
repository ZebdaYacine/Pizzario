<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.example.pizzario.ui.home.HomeViewModel" />
    </data>






    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:shadowDx="0"
            android:shadowDy="0"
            app:elevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_back_button"
                    android:gravity="center"
                    >



                    <ImageButton
                        android:layout_width="10dp"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_arrow_left_black"
                        >

                    </ImageButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_back_button"
                    android:gravity="center"
                    >



                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_shopping_basket_24"
                        >

                    </ImageButton>
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center">

            <SearchView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:iconifiedByDefault="false"
                android:id="@+id/search"
                android:queryBackground="@null"

                style="@style/SearchViewStyle"
                android:focusable="false"
                >



            </SearchView>

<!--            <LinearLayout-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:padding="8dp"-->
<!--                android:backgroundTint="@color/priceButton"-->
<!--                android:background="@drawable/bg_back_button"-->
<!--                android:gravity="center"-->
<!--                >-->



<!--                <ImageButton-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:backgroundTint="@color/black"-->
<!--                    android:background="@drawable/ic_baseline_filter_list_24"-->
<!--                    >-->

<!--                </ImageButton>-->
<!--            </LinearLayout>-->

        </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerM"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="20dp"
                android:textColor="@color/black">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most popular"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
</layout>
